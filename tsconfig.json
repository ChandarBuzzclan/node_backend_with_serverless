{
    "compilerOptions": {
      "strict": true,
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react-jsx",
      "outDir": ".build",
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["ESNext"],
      "rootDir": "./"
    },
    "exclude": ["node_modules", "**/*.test.ts"]
  }